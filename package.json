{
  "name": "guido",
  "author": "Gui Ruggiero",
  "homepage": "https://guiruggiero.com/",
  "version": "0.1",
  "type": "module",
  "main": "app.js",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@langfuse/client": "^4.5.1",
    "@langfuse/otel": "^4.5.1",
    "@langfuse/tracing": "^4.4.2",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@sentry/node": "^10.32.1",
    "@vonage/jwt": "^1.12.1",
    "@vonage/messages": "^1.22.1",
    "@vonage/server-sdk": "^3.25.1",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "mongodb": "^7.0.0",
    "sanitize-html": "^2.17.0"
  },
  "githubDependencies": {
    "esbuild": "",
    "terser": ""
  },
  "globalDependencies": {
    "@infisical/cli": ""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "eslint": "^9.39.2",
    "eslint-plugin-yml": "^1.19.1",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11"
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "**/.github/**",
      "**/references/**",
      "**/eslint.config.js"
    ],
    "delay": 600000
  },
  "scripts": {
    "lint": "eslint .",
    "dev": "infisical run -- nodemon --import ./src/startup.js app.js",
    "tunnel": "ngrok start guido",
    "build": "esbuild app.js --bundle --format=esm --platform=node --packages=external --minify --sourcemap --outfile=dist/app.js",
    "minify": "terser ./src/startup.js --module --compress --mangle --source-map \"filename='./src/startup.js.map',url='startup.js.map'\" -o ./src/startup.js",
    "start": "infisical run -- node --import ./src/startup.js dist/app.js",
    "monitor": "htop --sort-key=PERCENT_MEM --tree --user"
  }
}
