{
  "name": "guido",
  "author": "Gui Ruggiero",
  "homepage": "https://guiruggiero.com/",
  "version": "0.1",
  "type": "module",
  "main": "app.js",
  "dependencies": {
    "@google/genai": "^1.43.0",
    "@langfuse/client": "^4.5.1",
    "@langfuse/otel": "^4.5.1",
    "@langfuse/tracing": "^4.4.2",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@sentry/node": "^10.40.0",
    "@vonage/jwt": "^1.13.3",
    "@vonage/messages": "^1.23.4",
    "@vonage/server-sdk": "^3.26.4",
    "axios": "^1.13.6",
    "axios-retry": "^4.5.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "mongodb": "^7.1.0",
    "sanitize-html": "^2.17.1"
  },
  "githubDependencies": {
    "esbuild": "",
    "terser": ""
  },
  "globalDependencies": {
    "@infisical/cli": ""
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.9.0",
    "eslint": "^10.0.2",
    "eslint-plugin-yml": "^3.3.0",
    "globals": "^17.4.0",
    "nodemon": "^3.1.14"
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "**/.github/**",
      "**/references/**",
      "**/eslint.config.js"
    ],
    "delay": 600000
  },
  "scripts": {
    "lint": "eslint .",
    "dev": "infisical run -- nodemon --import ./src/startup.js app.js",
    "tunnel": "ngrok start guido",
    "build": "esbuild app.js --bundle --format=esm --platform=node --packages=external --minify --sourcemap --outfile=dist/app.js",
    "minify": "terser ./src/startup.js --module --compress --mangle --source-map \"filename='./src/startup.js.map',url='startup.js.map'\" -o ./src/startup.js",
    "start": "infisical run -- node --import ./src/startup.js dist/app.js",
    "monitor": "htop --sort-key=PERCENT_MEM --tree --user"
  }
}
