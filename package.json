{
  "name": "guido",
  "author": "Gui Ruggiero",
  "homepage": "https://guiruggiero.com/",
  "version": "0.1",
  "type": "module",
  "main": "app.js",
  "dependencies": {
    "@google-cloud/storage": "^7.17.2",
    "@google/genai": "^1.25.0",
    "@langfuse/client": "^4.3.0",
    "@sentry/node": "^10.20.0",
    "express": "^5.1.0",
    "express-xss-sanitizer": "^2.0.1",
    "helmet": "^8.1.0",
    "mongodb": "^6.20.0",
    "twilio": "^5.10.3"
  },
  "githubDependencies": {
    "esbuild": "",
    "terser": ""
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "eslint": "^9.38.0",
    "eslint-plugin-yml": "^1.19.0",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10"
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "**/.github/**",
      "**/eslint.config.js"
    ],
    "delay": 600000
  },
  "scripts": {
    "lint": "eslint .",
    "dev": "infisical run -- nodemon --import ./src/startup.js app.js",
    "tunnel": "ngrok start guido",
    "build": "esbuild app.js --bundle --format=esm --platform=node --packages=external --minify --sourcemap --outfile=dist/app.js",
    "minify": "terser ./src/startup.js --module --compress --mangle --source-map \"filename='./src/startup.js.map',url='startup.js.map'\" -o ./src/startup.js",
    "start": "infisical run -- node --enable-source-maps --import ./src/startup.js dist/app.js",
    "monitor": "htop --sort-key=PERCENT_MEM --tree --user"
  }
}
